# Pool Ladder - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# ADMIN AUTHENTICATION
# ============================================

# Admin password hash (generated with PBKDF2)
# Generate with: node -e "const crypto = require('crypto'); const salt = crypto.randomBytes(16).toString('hex'); const hash = crypto.pbkdf2Sync('YOUR_PASSWORD', salt, 10000, 64, 'sha512').toString('hex'); console.log(salt + ':' + hash);"
ADMIN_PASSWORD_HASH=your_salt:your_hash_here

# JWT secret for signing authentication tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# ============================================
# GITHUB INTEGRATION
# ============================================

# GitHub personal access token with repo write permissions
# Create at: https://github.com/settings/tokens/new
# Required scopes: repo (all)
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub repository details
GITHUB_OWNER=your-github-username
GITHUB_REPO=pool-ladder-website
GITHUB_BRANCH=main

# ============================================
# VERCEL DEPLOYMENT
# ============================================

# Vercel deploy hook URL (optional, for auto-refresh after publish)
# Get from: Vercel Dashboard → Settings → Git → Deploy Hooks
VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/...

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Node environment (development | production)
NODE_ENV=development

# Enable debug logging (true | false)
DEBUG=false

# Rate limiting configuration (optional overrides)
# RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
# RATE_LIMIT_MAX_ATTEMPTS=5  # Maximum login attempts per window
